{
  "name": "incentives-api",
  "version": "1.0.0",
  "description": "A RESTful web API for all the data powering our IRA calculator.",
  "main": "index.js",
  "repository": "git@github.com:rewiringamerica/incentives-api.git",
  "author": "Tom Carden <tomc@rewiringamerica.org>",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@js-joda/core": "^5.6.4",
    "@js-joda/timezone": "^2.21.2",
    "@rewiringamerica/capital-common": "^1.0.20",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.7.9",
    "axios-retry": "^4.0.0",
    "cheerio": "^1.0.0-rc.12",
    "fastify": "^4.17.0",
    "fastify-cli": "^6.1.1",
    "fastify-plugin": "^4.5.1",
    "fastify-sqlite": "^1.1.0",
    "geocodio-library-node": "^1.6.1",
    "lodash": "^4.17.21",
    "qs": "^6.11.2",
    "sqlite": "^5.1.1"
  },
  "devDependencies": {
    "@fastify/type-provider-json-schema-to-ts": "^2.2.2",
    "@js-joda/locale_en-us": "^4.15.1",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.15",
    "@types/make-fetch-happen": "^10.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "18.18.0",
    "@types/qs": "^6.9.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv": "^8.17.1",
    "csv": "^6.3.11",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.52.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.1.7",
    "json-schema-to-ts": "^2.0.0",
    "lint-staged": "^15.4.3",
    "make-fetch-happen": "^14.0.3",
    "minimist": "^1.2.8",
    "prettier": "^3.5.1",
    "prettier-plugin-multiline-arrays": "^3.0.6",
    "prettier-plugin-organize-imports": "^4.1.0",
    "sqlite3": "^5.1.7",
    "tap": "^19.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "start": "fastify start -l info -a 0.0.0.0 build/app.js --options",
    "dev": "fastify start -r ts-node/register -w --ignore-watch test -l info -P src/app.ts --options",
    "build": "rm -f ./incentives-api.db && sqlite3 incentives-api.db < scripts/import-csvs.sql",
    "lint": "tsc --noEmit && prettier --check . --ignore-path=.prettierignore && eslint .",
    "test": "STATIC_DATE=2025-01-25 dotenv -- tap -- --ts \"test/**/*.test.ts\"",
    "testfilter": "dotenv -- tap -- --ts",
    "update-snapshots": "UPDATE_SNAPSHOTS=1 STATIC_DATE=2025-01-25 dotenv -- tap -- --ts \"test/routes/*.test.ts\"",
    "check-data-freshness": "tap --timeout=0 scripts/check-data-freshness.ts",
    "prepare": "husky"
  },
  "tap": {
    "disable-coverage": true,
    "allow-empty-coverage": true
  },
  "lint-staged": {
    "{scripts,src,test}/**/*.{js,ts,tsx,json,md,css,html}": "prettier --write"
  }
}
